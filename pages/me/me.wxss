/* pages/me/me.wxss */
page {
	width: 100%;
	height: 100%;
}
.userinfo {
	display: flex;
	padding: 60rpx 35rpx;
}
	
.userinfo-left {
	flex-shrink: 0;
	width: 160rpx;
	height: 120rpx;
}
	
.userinfo-left image {
	width: 120rpx;
	height: 120rpx;
	border-radius: 10rpx;
}
.userinfo-right {
	flex: 1;
	display: flex;
	flex-direction: column;
	justify-content: space-around;
}
.userinfo-box {
	flex-shrink: 0;
	display: flex;
	justify-content: space-between;
	color: #8a8a8a;
}
